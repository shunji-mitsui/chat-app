{
  "scripts": {
    "api": "npm -C packages/api",
    "front": "npm -C packages/front",
    "lint:front": "npm -C packages/front run lint",
    "lint:api": "npm -C packages/api run lint",
    "fix:lint": "run-p lint:*",
    "format": "prettier . --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "workspaces": [
    "packages/front",
    "packages/api"
  ],
  "devDependencies": {
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5"
  }
}
